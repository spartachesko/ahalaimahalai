import random

lives = 9
words = ['пицца', 'дурак', 'забор', 'замок', 'лапти', 'корка', 'черед', 'конец', 'маска']
difficulty = input('Выбери уровень сложности (вариант 1, 2 или 3):\n 1 Легко\n 2 Средне\n 3 Сложно\n')
difficulty = int(difficulty)
secret_word = random.choice(words)
clue = list('?????')
heart_symbol = u'\u2764'
guessed_word_correctly = False


def update_clue(guessed_letter, secret_word, clue):
    index = 0
    while index < len(secret_word):
        if guessed_letter == secret_word[index]:
            clue[index] = guessed_letter
        index = index + 1


while lives > 0:
    print(clue)
    print('Осталось жизней: ' + heart_symbol * lives)
    guess = input('Отгадай букву или целое слово: ')
    if guess == secret_word:
        guessed_word_correctly = True
        break
    if guess in secret_word:
        update_clue(guess, secret_word, clue)
    else:
        print('Неверно. Ты потерял одну жизнь')
        lives = lives - 1

if guessed_word_correctly:
    print('Ты выиграл! Секретное слово было ' + secret_word)
else:
    print('Ты проиграл! Секретное слово было ' + secret_word)
